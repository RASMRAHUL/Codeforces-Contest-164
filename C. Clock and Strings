C. Clock and Strings

// Simple intutions 
// Check the intersection of the chord of watch
// it should be opposite chord vertices of adjacent to each other.

#include<iostream>
#include<vector>
#include<string>
#include<limits>
#include<stack>
#include<unordered_map>
#include<map>
#include<unordered_set>
#include<set>
#include<algorithm>

using namespace std;

void solve(){
  string s;
  cin>>s;
  unordered_map<char,int> m;
  for(char &i : s){
    m[i]++;
  }
  if(m.size() == 1)
    {
        cout<<"NO"<<endl;
        return ;
    }
    else
    {
        cout<<"YES"<<endl;
        for(int i=  1; i< s.size(); i++){
            if(s[i] != s[i-1])
            {
                swap(s[i], s[i-1]);
                cout<<s<<endl;
                break;
            }
        }
    }

    return;
}

int main(){
    int t;
    cin>>t;
    while(t--){
        solve();
    }
}
